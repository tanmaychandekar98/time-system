extends layout

block content
	#login
		.container
			.col-sm-offset-4.col-sm-4
				h3.col-sm-offset-4 Login
				hr
				form.form-horizontal(method="POST" action="/login")
					.form-group
						label.control-label.col-sm-4(for="username") ID:
						.col-sm-6
							input.form-control(name="username" ,type="text" ,placeholder="ID")
					.form-group
						label.control-label.col-sm-4(for="password") Password:
						.col-sm-6
							input.form-control(name="password" ,type="password",placeholder="Password")

					hr
					br

					input.btn1.col-sm-offset-4(type="submit" value="Login")